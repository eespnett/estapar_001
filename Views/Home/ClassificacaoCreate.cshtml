@model ClassificacaoModel
@{
    ViewData["Title"] = "ClassificacaoCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ClassificacaoCreate</h2>
@using (Html.BeginForm("ClassificacaoCreate", "Home", FormMethod.Post, new { id = "ClassificacaoCreate" }))
{
    <div class="form-group">
        <label for="exampleInputEmail1">ID</label>
        @Html.TextBoxFor(model => Model.Id, new { @readonly = "readonly" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Descrição</label>
        @Html.TextBoxFor(model => Model.Descricao)
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
}